{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "src",
      "paths": {
        "@img-processing/*": ["img-processing/*"],
        "@util/*": ["util/*"],
        "@validate/*": ["validate/*"],
        "@middleware/*": ["middleware/*"]
      },
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noUnusedLocals": false,
    },
    "include": [
      "src/**/*.ts",
      "src/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
